<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings</title>
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            color: #333;
            font-family: Georgia, 'Times New Roman', Times, serif;
        }

        /* Header Styling */
        h1, h3 {
            text-align: center;
            color: #4CAF50;
            margin: 20px 0;
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            text-decoration: underline;
            color: #f5901d;
        }

        h3 {
            font-size: 1.5rem;
        }

        p {
            text-align: center;
            font-size: 1rem;
        }

        p a {
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
        }

        p a:hover {
            text-decoration: underline;
        }

        /* Table Container */
        .table-container {
            max-width: 1200px;
            margin: 30px auto;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        /* Scrollable Table for mobile */
        .table-scrollable {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            margin-top: 20px;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #ddd;
            font-size: 1rem;
        }

        th {
            background-color: #4CAF50;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Row Styling */
        .confirmed-row {
            background-color: #90EE90; /* Light Green for confirmed */
        }

        .not-confirmed-row {
            background-color: #FFCCCB; /* Light Red for not confirmed */
        }

        /* Button Styling */
        button {
            padding: 8px 16px;
            font-size: 14px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        .confirm {
            background-color: #4CAF50;
            color: white;
        }

        .not-confirmed {
            background-color: #FF6347;
            color: white;
        }

        button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        /* Footer Styling */
        footer {
            text-align: center;
            padding: 20px 0;
            background-color: #333;
            color: white;
        }

        footer a {
            color: #ff9800;
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
                text-align: center;
            }

            table {
                font-size: 0.9rem;
            }

            th, td {
                padding: 10px;
            }

            button {
                font-size: 12px;
                padding: 6px 12px;
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 1.6rem;
            }

            h3 {
                font-size: 1.2rem;
            }

            table {
                font-size: 0.85rem;
            }

            button {
                font-size: 11px;
                padding: 5px 10px;
            }

            th, td {
                padding: 8px;
            }
        }
    </style>
</head>
<body>

    <h1>AVIATOURS AUSTRALIA</h1>
    <h3>Bookings List Admin Panel</h3>
    <h3>Welcome! Kunal</h3>
    <p>Security provided by <a href="https://www.freelancerpro.in" target="_blank">freelancerpro (INDIA)</a></p>

    <div class="table-container">
        <div class="table-scrollable">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Telephone</th>
                        <th>Country</th>
                        <th>Members</th>
                        <th>Address</th>
                        <th>Country Code</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="bookingTable">
                    <% bookings.reverse().forEach(function(booking) { %>
                        <tr class="<%= booking.confirmed ? 'confirmed-row' : 'not-confirmed-row' %>">
                            <td><%= new Date(booking.bookingDate).toLocaleDateString() %></td>
                            <td><%= booking.name %></td>
                            <td><%= booking.telephone %></td>
                            <td><%= booking.country %></td>
                            <td><%= booking.members %></td>
                            <td><%= booking.address %></td>
                            <td><%= booking.countryCode %></td>
                            <td>
                                <% if (booking.confirmed) { %>
                                    <button class="confirm" disabled>Confirmed</button>
                                <% } else { %>
                                    <button class="not-confirmed" onclick="changeStatus('<%= booking._id %>', 'confirmed', this)">Confirm</button>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 AVIATOURS. All rights reserved. <br> Powered by <a href="https://www.freelancerpro.in" target="_blank">FreelancerPro</a></p>
    </footer>

    <!-- Button to request notification permission -->
    <button id="request-notification-btn">Enable Notifications</button>

    <script>
        // Request notification permission when the page loads
        if (Notification.permission !== 'granted') {
            // Ask for permission on user interaction, such as clicking a button
            document.getElementById('request-notification-btn').addEventListener('click', function() {
                Notification.requestPermission().then(permission => {
                    if (permission === 'granted') {
                        console.log('Notification permission granted');
                    } else {
                        console.log('Notification permission denied');
                    }
                });
            });
        }

        // Register the service worker
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('./service-worker.js')  // Register service-worker.js in the same folder
                .then(function(registration) {
                    console.log('Service Worker registered with scope:', registration.scope);
                })
                .catch(function(error) {
                    console.log('Service Worker registration failed:', error);
                });
        }

        // Listen for updates from the SSE stream
        const eventSource = new EventSource('/events');

        eventSource.onmessage = function(event) {
            const newBooking = JSON.parse(event.data);
            console.log("New booking added:", newBooking);

            // Create a new row for the booking
            const tableBody = document.getElementById('bookingTable');
            const newRow = document.createElement('tr');

            newRow.classList.add(newBooking.confirmed ? 'confirmed-row' : 'not-confirmed-row');
            newRow.innerHTML = `
                <td>${new Date(newBooking.bookingDate).toLocaleDateString()}</td>
                <td>${newBooking.name}</td>
                <td>${newBooking.telephone}</td>
                <td>${newBooking.country}</td>
                <td>${newBooking.members}</td>
                <td>${newBooking.address}</td>
                <td>${newBooking.countryCode}</td>
                <td>
                    ${newBooking.confirmed ? 
                        `<button class="confirm" disabled>Confirmed</button>` : 
                        `<button class="not-confirmed" onclick="changeStatus('${newBooking._id}', 'confirmed', this)">Confirm</button>`
                    }
                </td>
            `;

            // Prepend the new row to the table body to show it on top
            tableBody.insertBefore(newRow, tableBody.firstChild);

            // If notifications are allowed, send the notification
            if (Notification.permission === 'granted') {
                new Notification('New Booking Added', {
                    body: `Name: ${newBooking.name}, Phone: ${newBooking.telephone}`,
                    icon: '/path/to/your/icon.png' // Optional icon path
                });
            }
        };

        // Function to change booking status (Confirm)
        async function changeStatus(bookingId, status, button) {
            try {
                const response = await fetch(`/update-status/${bookingId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: status })
                });

                const result = await response.json();
                if (result.success) {
                    // Update the button text and disable it
                    button.innerText = 'Confirmed';
                    button.classList.remove('not-confirmed');
                    button.classList.add('confirm');
                    button.disabled = true;

                    // Change the row style to confirmed
                    const row = button.closest('tr');
                    row.classList.remove('not-confirmed-row');
                    row.classList.add('confirmed-row');
                } else {
                    alert('Failed to update status.');
                }
            } catch (error) {
                console.error('Error updating status:', error);
            }
        }
    </script>
</body>
</html>
